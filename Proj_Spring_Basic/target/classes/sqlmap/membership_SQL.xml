<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<insert id="insert" parameterType="hashMap" useGeneratedKeys="true" keyProperty="member_id">
		<![CDATA[
		insert into memList(uid, upw, uname, uemail) 
		values(#{uid},#{upw},#{uName},#{uEmail})
		]]>
	</insert>
	
	<select id="select_detail" parameterType="hashMap" resultType="hashMap">
		<![CDATA[
			select uid, upw, uname, uemail from memList where num = #{num}
		]]>
	</select>
	
	<select id="select_list" parameterType="hashMap" resultType="hashMap">
		<![CDATA[
			select * from memList order by num desc
		]]>
	</select>
	
	
</mapper>